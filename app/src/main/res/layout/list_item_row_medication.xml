<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_10">

            <ImageView
                android:id="@+id/iv_pill"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="@dimen/margin_10"
                android:background="@color/colorPrimaryLight"
                android:contentDescription="@string/pill_image"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_pill_two"
                />

        <LinearLayout
            android:id="@+id/ll_name_freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pill"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toEndOf="@+id/iv_pill"
            android:layout_marginLeft="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_medication_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_grey"
                android:textSize="@dimen/text_size_14"
                android:textAllCaps="true"
                android:textStyle="bold"
                tools:text="Paracetamol" />

            <TextView
                android:id="@+id/tv_interval"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_button"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_12"
                android:gravity="center"
                android:paddingTop="@dimen/margin_2"
                android:paddingBottom="@dimen/margin_2"
                tools:text="Twice Daily" /><!--

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_2"/>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                tools:text="5 days || Mon - Fri" />-->

        </LinearLayout>
            <TextView
                android:id="@+id/tv_alarm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_10"
                android:layout_alignParentEnd="true"
                android:text="8:00am"
                android:textColor="@color/colorPrimary"
                android:gravity="end|center_vertical"
                android:drawableTop="@drawable/ic_bell_outline"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/margin_2"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_5"
            tools:text="5 days || Mon - Fri" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>